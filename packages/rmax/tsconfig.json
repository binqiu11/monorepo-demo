{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "typedef/*"],
  "exclude": ["src/**/__tests__/*"]
}
